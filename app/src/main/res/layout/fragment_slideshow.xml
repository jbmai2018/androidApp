    <Button
        android:id="@+id/face_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="serif"
        android:padding="15dp"
        android:text="REGISTER FACE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Designation" />
    <Button
        android:id="@+id/sap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="serif"
        android:padding="15dp"
        android:text="SAP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="93dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="93dp"
        android:fontFamily="serif"
        android:text="ALREADY REGISTERED? VERIFY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/face_dec" />

    <EditText
        android:id="@+id/PlantID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:alpha="1"
        android:backgroundTint="#E6000000"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Plant ID"
        android:inputType="textPersonName"
        android:shadowColor="#B3000000"
        android:textColor="#E6070707"
        android:textColorHighlight="#000000"
        android:textColorHint="#B3020202"
        android:textColorLink="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/companyID" />

    <EditText
        android:id="@+id/FirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:alpha="1"
        android:backgroundTint="#E6000000"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:shadowColor="#B3000000"
        android:textColor="#E6040303"
        android:textColorHighlight="#000000"
        android:textColorHint="#B3020202"
        android:textColorLink="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PlantID" />

    <EditText
        android:id="@+id/EmployeeID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:alpha="1"
        android:backgroundTint="#E6000000"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Employee ID"
        android:inputType="textPersonName"
        android:shadowColor="#B3000000"
        android:textColor="#E6070707"
        android:textColorHighlight="#000000"
        android:textColorHint="#B3020202"
        android:textColorLink="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FirstName" />
    <EditText
        android:id="@+id/Designation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:alpha="1"
        android:backgroundTint="#E6000000"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Designation"
        android:inputType="textPersonName"
        android:shadowColor="#B3000000"
        android:textColor="#E6070707"
        android:textColorHighlight="#000000"
        android:textColorHint="#B3020202"
        android:textColorLink="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmployeeID" />

    <EditText
        android:id="@+id/companyID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:alpha="1"
        android:backgroundTint="#E6000000"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Company ID"
        android:inputType="textPersonName"
        android:shadowColor="#B3000000"
        android:textColor="#E60B0A0A"
        android:textColorHighlight="#000000"
        android:textColorHint="#B3020202"
        android:textColorLink="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sap" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="105dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="FACE REGISTRATION"
        android:textColor="#3949AB"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>